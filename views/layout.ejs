<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TaskManager</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Font Awesome para ícones -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <style>
      .fade-in { animation: fadeIn 0.5s; }
      @keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }
      /* Toast simples */
      #toast {
        position: fixed;
        bottom: 32px;
        left: 50%;
        transform: translateX(-50%);
        z-index: 9999;
        min-width: 200px;
        max-width: 90vw;
        display: none;
      }
    </style>
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">
    <!-- Navbar simples (opcional) -->
    <nav class="bg-indigo-700 text-white px-6 py-4 shadow">
        <div class="container mx-auto flex justify-between items-center">
            <a href="/" class="font-bold text-xl flex items-center gap-2">
                <i class="fas fa-tasks"></i> TaskManager
            </a>
            <div class="space-x-4">
                <a href="/tarefas" class="hover:underline">Tarefas</a>
                <a href="/users" class="hover:underline">Usuários</a>
                <a href="/projetos" class="hover:underline">Projetos</a>
                <a href="/rooms" class="hover:underline">Quartos</a>
                <a href="/categorias-quartos" class="hover:underline">Categorias</a>
                <a href="/comentarios" class="hover:underline">Comentários</a>
                <a href="/pagamentos" class="hover:underline">Pagamentos</a>
                <a href="/enderecos" class="hover:underline">Endereços</a>
                <a href="/avaliacoes" class="hover:underline">Avaliações</a>
            </div>
        </div>
    </nav>

    <div class="container mx-auto py-8 flex-1">
        <%- body %>
    </div>

    <footer class="w-full text-center text-gray-500 py-4 mt-auto">
        © 2024 TaskManager. Todos os direitos reservados.
    </footer>

    <!-- Toast para feedback visual -->
    <div id="toast" class="rounded bg-indigo-600 text-white px-6 py-3 shadow-lg text-center"></div>
    <script>
      function showToast(msg, type) {
        const toast = document.getElementById('toast');
        toast.textContent = msg;
        toast.className = "rounded px-6 py-3 shadow-lg text-center";
        if (type === 'error') {
          toast.classList.add('bg-red-600');
        } else {
          toast.classList.add('bg-indigo-600');
        }
        toast.style.display = 'block';
        setTimeout(() => { toast.style.display = 'none'; }, 2000);
      }
    </script>
</body>
</html>