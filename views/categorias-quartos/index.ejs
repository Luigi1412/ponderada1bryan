<% layout('layout') %>
<div class="max-w-2xl mx-auto bg-white rounded-lg shadow p-6 mt-10 fade-in">
  <h1 class="text-2xl font-bold mb-6 text-gray-800 flex items-center gap-2">
    <i class="fas fa-layer-group text-indigo-600"></i> Categorias de Quarto
  </h1>
  <div class="flex gap-2 mb-6">
    <input id="novo-nome" class="flex-1 border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-400" placeholder="Nome da categoria">
    <input id="nova-descricao" class="flex-1 border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-400" placeholder="Descrição">
    <button class="bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700 transition" onclick="criarCategoria()">Adicionar</button>
  </div>
  <ul id="lista-categorias" class="space-y-2"></ul>
</div>

<script>
async function carregarCategorias() {
  const res = await fetch('/categorias-quartos/api');
  const categorias = await res.json();
  const lista = document.getElementById('lista-categorias');
  lista.innerHTML = '';
  categorias.forEach(categoria => {
    const li = document.createElement('li');
    li.className = "flex justify-between items-center bg-gray-100 rounded px-4 py-2";
    li.innerHTML = `
      <span class="text-gray-700">${categoria.nome} - ${categoria.descricao || ''}</span>
      <button class="bg-red-500 text-white px-3 py-1 rounded hover:bg-red-600 transition" onclick="deletarCategoria(${categoria.id})">
        <i class="fas fa-trash"></i> Excluir
      </button>
    `;
    lista.appendChild(li);
  });
}

async function criarCategoria() {
  const nome = document.getElementById('novo-nome').value;
  const descricao = document.getElementById('nova-descricao').value;
  if (!nome) {
    showToast('Preencha o nome da categoria', 'error');
    return;
  }
  const btn = document.querySelector('button[onclick="criarCategoria()"]');
  btn.disabled = true;
  await fetch('/categorias-quartos/api', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ nome, descricao })
  });
  btn.disabled = false;
  document.getElementById('novo-nome').value = '';
  document.getElementById('nova-descricao').value = '';
  showToast('Categoria criada com sucesso!');
  carregarCategorias();
}

async function deletarCategoria(id) {
  await fetch('/categorias-quartos/api/' + id, { method: 'DELETE' });
  showToast('Categoria excluída com sucesso!');
  carregarCategorias();
}

window.onload = carregarCategorias;
</script>