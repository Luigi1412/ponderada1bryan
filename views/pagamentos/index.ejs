<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2"><%= title %></h1>
  <div class="btn-toolbar mb-2 mb-md-0">
    <div class="btn-group me-2">
      <a href="/pagamentos/novo" class="btn btn-sm btn-outline-secondary">Novo Pagamento</a>
    </div>
  </div>
</div>
<p><%= description %></p>

<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Reserva ID</th>
        <th scope="col">Cliente</th>
        <th scope="col">Valor</th>
        <th scope="col">Método</th>
        <th scope="col">Status</th>
        <th scope="col">Data</th>
        <th scope="col">Ações</th>
      </tr>
    </thead>
    <tbody>
      <% if (locals.pagamentos && pagamentos.length > 0) { %>
        <% pagamentos.forEach(pagamento => { %>
          <tr id="pagamento-<%= pagamento.id %>">
            <td><%= pagamento.id %></td>
            <td><%= pagamento.reserva_id %></td>
            <td><%= pagamento.usuario_nome || 'N/A' %></td>
            <td>R$ <%= parseFloat(pagamento.valor).toFixed(2) %></td>
            <td><%= pagamento.metodo %></td>
            <td><%= pagamento.status %></td>
            <td><%= new Date(pagamento.data_pagamento).toLocaleDateString('pt-BR') %></td>
            <td>
              <a href="/pagamentos/editar/<%= pagamento.id %>" class="btn btn-sm btn-primary">Editar</a>
              <button onclick="deleteItem('<%= pagamento.id %>', 'pagamentos')" class="btn btn-sm btn-danger">Excluir</button>
            </td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="8" class="text-center">Nenhum pagamento encontrado.</td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>

<script>
async function carregarPagamentos() {
  const res = await fetch('/pagamentos/api');
  const pagamentos = await res.json();
  const lista = document.getElementById('lista-pagamentos');
  lista.innerHTML = '';
  pagamentos.forEach(pagamento => {
    const li = document.createElement('li');
    li.className = "flex justify-between items-center bg-gray-100 rounded px-4 py-2";
    li.innerHTML = `
      <span class="text-gray-700">R$ ${pagamento.valor} - ${pagamento.metodo} (Usuário: ${pagamento.usuario_id})</span>
      <button class="bg-red-500 text-white px-3 py-1 rounded hover:bg-red-600 transition" onclick="deletarPagamento(${pagamento.id})">
        <i class="fas fa-trash"></i> Excluir
      </button>
    `;
    lista.appendChild(li);
  });
}

async function criarPagamento() {
  const valor = document.getElementById('novo-valor').value;
  const metodo = document.getElementById('novo-metodo').value;
  const usuario_id = document.getElementById('novo-usuario').value;
  if (!valor || !metodo || !usuario_id) {
    showToast('Preencha todos os campos', 'error');
    return;
  }
  const btn = document.querySelector('button[onclick="criarPagamento()"]');
  btn.disabled = true;
  await fetch('/pagamentos/api', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ valor, metodo, usuario_id })
  });
  btn.disabled = false;
  document.getElementById('novo-valor').value = '';
  document.getElementById('novo-metodo').value = '';
  document.getElementById('novo-usuario').value = '';
  showToast('Pagamento criado com sucesso!');
  carregarPagamentos();
}

async function deletarPagamento(id) {
  await fetch('/pagamentos/api/' + id, { method: 'DELETE' });
  showToast('Pagamento excluído com sucesso!');
  carregarPagamentos();
}

window.onload = carregarPagamentos;
</script>