<% layout('layout') %>
<div class="max-w-2xl mx-auto bg-white rounded-lg shadow p-6 mt-10 fade-in">
  <h1 class="text-2xl font-bold mb-6 text-gray-800 flex items-center gap-2">
    <i class="fas fa-credit-card text-indigo-600"></i> Pagamentos
  </h1>
  <div class="flex gap-2 mb-6">
    <input id="novo-valor" type="number" step="0.01" class="w-32 border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-400" placeholder="Valor">
    <input id="novo-metodo" class="flex-1 border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-400" placeholder="Método">
    <input id="novo-usuario" class="w-32 border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-400" placeholder="ID do usuário">
    <button class="bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700 transition" onclick="criarPagamento()">Adicionar</button>
  </div>
  <ul id="lista-pagamentos" class="space-y-2"></ul>
</div>

<script>
async function carregarPagamentos() {
  const res = await fetch('/pagamentos/api');
  const pagamentos = await res.json();
  const lista = document.getElementById('lista-pagamentos');
  lista.innerHTML = '';
  pagamentos.forEach(pagamento => {
    const li = document.createElement('li');
    li.className = "flex justify-between items-center bg-gray-100 rounded px-4 py-2";
    li.innerHTML = `
      <span class="text-gray-700">R$ ${pagamento.valor} - ${pagamento.metodo} (Usuário: ${pagamento.usuario_id})</span>
      <button class="bg-red-500 text-white px-3 py-1 rounded hover:bg-red-600 transition" onclick="deletarPagamento(${pagamento.id})">
        <i class="fas fa-trash"></i> Excluir
      </button>
    `;
    lista.appendChild(li);
  });
}

async function criarPagamento() {
  const valor = document.getElementById('novo-valor').value;
  const metodo = document.getElementById('novo-metodo').value;
  const usuario_id = document.getElementById('novo-usuario').value;
  if (!valor || !metodo || !usuario_id) {
    showToast('Preencha todos os campos', 'error');
    return;
  }
  const btn = document.querySelector('button[onclick="criarPagamento()"]');
  btn.disabled = true;
  await fetch('/pagamentos/api', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ valor, metodo, usuario_id })
  });
  btn.disabled = false;
  document.getElementById('novo-valor').value = '';
  document.getElementById('novo-metodo').value = '';
  document.getElementById('novo-usuario').value = '';
  showToast('Pagamento criado com sucesso!');
  carregarPagamentos();
}

async function deletarPagamento(id) {
  await fetch('/pagamentos/api/' + id, { method: 'DELETE' });
  showToast('Pagamento excluído com sucesso!');
  carregarPagamentos();
}

window.onload = carregarPagamentos;
</script>