<% layout('layout') %>
<h1>Tarefas</h1>
<a href="/tarefas/new">Nova Tarefa</a>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Título</th>
      <th>Status</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% tarefas.forEach(tarefa => { %>
      <tr>
        <td><%= tarefa.id %></td>
        <td><%= tarefa.titulo %></td>
        <td><%= tarefa.status %></td>
        <td>
          <a href="/tarefas/<%= tarefa.id %>/edit">Editar</a>
          <form action="/tarefas/<%= tarefa.id %>?_method=DELETE" method="POST" style="display:inline;">
            <button type="submit">Excluir</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>