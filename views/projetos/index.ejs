<% layout('layout') %>
<h1>Projetos</h1>
<a href="/projetos/new">Novo Projeto</a>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% projetos.forEach(projeto => { %>
      <tr>
        <td><%= projeto.id %></td>
        <td><%= projeto.nome %></td>
        <td><%= projeto.descricao %></td>
        <td>
          <a href="/projetos/<%= projeto.id %>/edit">Editar</a>
          <form action="/projetos/<%= projeto.id %>?_method=DELETE" method="POST" style="display:inline;">
            <button type="submit">Excluir</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>